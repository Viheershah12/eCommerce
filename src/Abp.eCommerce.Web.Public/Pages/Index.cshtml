                        <i class="fa fa-sign-in me-2"></i> @L["Login"]
                    </a>

                    <!-- Continue as Guest Button -->
                    <a href="@Model.PasswordlessLoginUrl" class="btn btn-lg rounded-pill px-5 guest-button">
                        <i class="fa fa-user-circle me-2"></i> Continue as Guest
                    </a>
                </abp-card-body>
            </abp-card>
        </div>
    </div>

@page
@model Abp.eCommerce.Web.Public.Pages.IndexModel

@using Abp.eCommerce.Web.Public.Menus
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Abp.eCommerce.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Theming
@using Volo.Abp.Users

@inject IPageLayout PageLayout
@inject IStringLocalizer<eCommerceResource> L
@inject ICurrentUser CurrentUser
@inject IThemeManager ThemeManager

@{
    PageLayout.Content.Title = L["Menu:Home"];
    PageLayout.Content.MenuItemName = eCommerceWebPublicMenus.Home;

    if (!CurrentUser.IsAuthenticated)
    {
        Layout = ThemeManager.CurrentTheme.GetEmptyLayout();
    }
}

@section styles {
    <abp-style src="/Pages/Index.css" />
    <abp-style src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    @if (!CurrentUser.IsAuthenticated)
    {
        <style>
            body {
                margin: 0;
                padding: 0;
                background: linear-gradient(135deg, #f9f9f9, #e0eafc);
                overflow: hidden;
                position: relative;
                font-family: 'Poppins', sans-serif;
            }
        </style>
    }
    else
    {
        <style>
            body {
                margin: 0;
                padding: 0;
                @* height: 100vh; *@
                background: linear-gradient(135deg, #f9f9f9, #e0eafc);
                @* overflow: hidden; *@
                position: relative;
                font-family: 'Poppins', sans-serif;
            }
        </style>
    }
}


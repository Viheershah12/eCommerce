@page
@using Abp.eCommerce.Localization
@using Inventory.Web.Menus
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Product.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout

@inject IStringLocalizer<eCommerceResource> L
@inject IAuthorizationService AuthorizationService
@inject PageLayout PageLayout

@model Inventory.Web.Pages.StockBalance.EditModel

@{
    PageLayout.Content.MenuItemName = InventoryMenus.StockBalance;
    PageLayout.Content.Title = L["Menu:EditStockBalance"];

    PageLayout.Content.BreadCrumb.Add(L["Menu:StockBalance"], "/StockBalance");
}

<form asp-page="/StockBalance/Edit">
    <abp-input asp-for="StockBalance.Id" type="hidden" />

    <abp-column class="text-end pb-3">
        <abp-button type="submit" text="@L["Save"].Value" button-type="Primary" />
    </abp-column>

    <abp-card>
        <abp-card-header>
            <abp-row>
                <abp-column>
                    <abp-card-title>@L["Title:EditStockBalance"]</abp-card-title>
                </abp-column>
            </abp-row>
        </abp-card-header>

        <abp-card-body>
            <abp-row>
                <abp-column size-md="_6">
                    <abp-select asp-for="StockBalance.ProductId" asp-items="Model.ProductDropdown" disabled="disabled" />
                </abp-column>

                <abp-column size-md="_6">
                    <abp-input asp-for="StockBalance.StockQuantity" type="number" readonly="true" />
                </abp-column>

                <abp-column-breaker />

                <abp-column size-md="_6">
                    <abp-input asp-for="StockBalance.ReservedQuantity" type="number" />
                </abp-column>

                <abp-column size-md="_6">
                    <abp-input asp-for="StockBalance.ReorderThreshold" />
                </abp-column>

                <abp-column-breaker />

                <abp-column size-md="_6">
                    <div class="form-check form-switch mt-3">
                        <input class="form-check-input" type="checkbox" asp-for="StockBalance.AllowBackorder">
                        <label class="form-check-label" asp-for="StockBalance.AllowBackorder">@L["AllowBackorder"]</label>
                    </div>
                </abp-column>
            </abp-row>
        </abp-card-body>
    </abp-card>
</form>